{% extends '::master.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
    <article>
        <section class="jumbotron">
            <h1 class="jumbo-title text-center">
                {{ article.title }}<br />
                <small>
                    Published {{ article.relativePublished }} {# by {{ article.author.username }} #}

                    {% if article.categories|length > 0 %}
                        in
                        {% for category in article.categories %}
                            {# Show the categories in a readable manner, i.e. "Category, Category, Category, and Category" #}
                            {% if loop.last %}and {% endif %}<a href="#">{{ category.name }}</a>{% if not loop.last %}, {% endif %}
                        {% endfor %}
                    {% endif %}
                </small>
            </h1>
        </section>
        <section class="content">
            {{ article.content|raw }}
        </section>
    </article>
{% endblock %}
