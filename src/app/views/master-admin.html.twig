<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}{% endblock %}{% if block('title') %} &middot; {% endif %}{{ config.get('app.site_name') }} Admin</title>

    <link href='//fonts.googleapis.com/css?family=Alegreya+Sans:300,400,700,400italic,700italic,300italic' rel='stylesheet' type='text/css'>
    <link href="{{ asset('assets/core/css/style.min.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('assets/core/fonts/flaticons-social/social.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('assets/tridentframeworkmodule/fonts/inconsolata/inconsolata.css') }}" rel="stylesheet" type="text/css" />
</head>
<body>
    <header class="navbar" role="navigation">
        <div class="navbar-header">
            <a class="navbar-hamburger" data-collapse data-target=".pri-navbar-collapse">
                <div class="navicon"></div>
            </a>
            <a href="#" class="navbar-brand">{{ config.get('app.site_name') }} <span class="text-special">Admin</span></a>
        </div>
        <nav class="navbar-collapse pri-navbar-collapse" role="navigation">
            <ul class="navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" data-dropdown>Blog <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#">Articles</a></li>
                        <li><a href="#">Categories</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#" data-dropdown>{{ app.user.username }} <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#">Edit Account</a></li>
                        <li><a href="#">Sign Out</a></li>
                    </ul>
                </li>
            </ul>
        </nav>
    </header>

    {% block body %}{% endblock %}

    <script src="{{ asset('assets/core/js/scripts.min.js') }}" type="text/javascript"></script>

    {% block javascript %}{% endblock %}
</body>
</html>
