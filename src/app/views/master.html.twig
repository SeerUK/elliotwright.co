<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}{% endblock %}{% if block('title') %} &middot; {% endif %}{{ config.get('app.site_name') }}</title>

    <link href="//cdnjs.cloudflare.com/ajax/libs/normalize/3.0.1/normalize.min.css" rel="stylesheet" type="text/css" />
    <link href="{{ asset('assets/tridentframeworkmodule/fonts/inconsolata/inconsolata.css') }}" rel="stylesheet" type="text/css" />
    <link href='//fonts.googleapis.com/css?family=Alegreya+Sans:300,400,700,400italic,700italic,300italic' rel='stylesheet' type='text/css'>
    <link href='//fonts.googleapis.com/css?family=Merriweather:400,400italic,700,700italic,300,300italic' rel='stylesheet' type='text/css'>
    <link href="{{ asset('assets/core/css/style.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('assets/core/css/prism.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('assets/core/fonts/flaticons-social/social.css') }}" rel="stylesheet" type="text/css" />
</head>
<body>
    <header data-headroom class="navbar navbar-fixed-top" role="navigation">
        <div class="navbar-header">
            <a class="navbar-hamburger" data-target=".pri-navbar-collapse">
                <div class="navicon"></div>
            </a>
            <a href="#" class="navbar-brand">{{ config.get('app.site_name') }}</a>
        </div>
        <nav class="navbar-collapse collapsed pri-navbar-collapse" role="navigation">
            <ul class="navbar-nav navbar-right">
                <li><a href="#">About</a></li>
                <li><a href="#">Articles</a></li>
            </ul>
        </nav>
    </header>

    {% block body %}{% endblock %}

    <footer class="footer-social">
        <div class="social-centered">
            <ul class="social-items">
                <li><a href="https://www.facebook.com/wright.elliot" target="_blank"><i class="flaticon social facebook-1"></i></a></li>
                <li><a href="https://github.com/SeerUK" target="_blank"><i class="flaticon social github-1"></i></a></li>
            </ul>
        </div>
    </footer>

    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js" type="text/javascript"></script>
    <script src="{{ asset('assets/core/js/headroom.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/core/js/jQuery.headroom.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/core/js/prism.js') }}" type="text/javascript"></script>

    <script type="text/javascript">
        var $hamburger = $('.navbar-hamburger');

        $hamburger.click(function(e) {
            e.preventDefault();

            var $this   = $(this);
            var $target = $($this.data('target'));

            $this.toggleClass('open');

            $target.toggleClass('open').promise().done(function() {
                var $clone = $target.clone().css({'height': 'auto'}).appendTo($target.parent());
                var height = $clone.height();

                $clone.remove();

                if ($target.hasClass('open')) {
                    $target.css({'height': height});
                } else {
                    $target.css({'height': ''});
                }
            });
        });
    </script>

    {% block javascript %}{% endblock %}
</body>
</html>
